{
    "data_dir": "/data",
    "log_level": "debug",
    "client_addr": "0.0.0.0",
    "ports": {
            "//": "if enabled, also need 'recursor' config to point to your dns",
            "dns": -1
    },
    "disable_update_check": true,
    "watches": [
        {
            "type": "event",
            "name": "trigger-reload",
            "handler": "./consul-reload"
        },
        {
            "type": "event",
            "name": "ensure-registrator",
            "handler": "./consul-ensure-registrator"
        },
        {
            "type": "keyprefix",
            "prefix": "HOSTNAME/",
            "handler": "./consul-host-update"
        }
    ]
}

